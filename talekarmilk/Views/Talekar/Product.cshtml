@using talekarmilk.Models;
@{
    ViewBag.Title = "Product | Indrayani Milk Marketing";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}


	<!-- Section: services -->
    <section id="service" class="home-section color-dark bg-gray">
		<div class="container marginbot-50">
			<div class="row">
				<div class="col-lg-8 col-lg-offset-2">
					<div>
					<div class="section-heading text-center">
					<h2 class="h-bold">Our Products</h2>
					<div class="divider-header"></div>
					</div>
					</div>
				</div>
			</div>

		</div>

		<div class="text-center">
		<div class="container">

        <div class="row animatedParent">
            @foreach(TblProduct a in ViewBag.Product)
            {
            <div class="col-xs-6 col-sm-4 col-md-4">
				<div class="animated rotateInDownLeft">
                <div class="service-box">
					@*<div class="service-icon">
						<span class="fa fa-laptop fa-2x"></span> 
					</div>*@
					<div class="service-desc">						
						<h5>@a.pro_name</h5>
                        <img src="~/saveimages/@a.pro_image" class="img-responsive" style="width:300px; height:250px;" alt="img">
						@*<div class="divider-header"></div>
						<p>
						Ad denique euripidis signiferumque vim, iusto admodum quo cu. No tritani neglegentur mediocritatem duo.
						</p>
						*@
                        <br />
                        <a href="~/Talekar/Product_View?prod_id=@a.pro_id" class="btn btn-skin">Learn more</a>
					</div>
                </div>
				</div>
            </div>
			}
            

        </div>		
		</div>
		</div>
        
	</section>
	<!-- /Section: services -->
	

	

