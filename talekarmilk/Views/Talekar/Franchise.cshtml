@using talekarmilk.Models;
@{
    ViewBag.Title = "Franchise | Indrayani Milk Marketing";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<section class="home-section color-dark bg-white">
    <div class="container marginbot-50" style="background-color: rgba(230, 230, 230, 0.62)">
        <br />
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <div class="animatedParent">
                    <div class="section-heading text-center animated bounceInDown">
                        <h2 class="h-bold">Be a Part of Our Organization</h2>
                        <p>(Franchise form. Please fill all details.)</p>
                        <div class="divider-header"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="container" style="background-color: rgba(230, 230, 230, 0.62)">
        <br />

        <form id="contact-form" method="post" action="@Url.Action("Franchise", "Talekar")">
            <div class="row marginbot-20">
                <div class="col-md-2">
                    <label>Enter Full Name *:</label>
                </div>

                <div class="col-md-4">
                    <input type="text" class="form-control input-lg" id="name" name="name" placeholder="Enter Full Name" required="required" pattern="^[A-Za-z ]+$" title="Please enter character only"/>
                </div>
                <div class="col-md-2">
                    <label>Enter Mobile Numer *:</label>
                </div>

                <div class="col-md-4">
                    <input type="text" class="form-control input-lg" id="mobile" name="mobile" placeholder="Enter Mobile Number" required="required" pattern="^[0-9 ]+$" title="Please enter 10 digit number only"/>
                </div>


            </div>
            <div class="row marginbot-20">
                <div class="col-md-2">
                    <label>Enter Email ID *:</label>
                </div>

                <div class="col-md-4">
                    <input type="email" class="form-control input-lg" id="email" name="email" placeholder="Enter Email Id" required="required" />
                </div>
                <div class="col-md-2">
                    <label>Enter FAX Numer *:</label>
                </div>

                <div class="col-md-4">
                    <input type="text" class="form-control input-lg" id="faxnumber" name="faxnumber" placeholder="Enter Fax Number" title="Please enter numeric only"/>
                </div>


            </div>
            <div class="row marginbot-20">
                <div class="col-md-2">
                    <label>Enter Address *:</label>
                </div>

                <div class="col-md-10">
                    <div class="form-group">
                        <textarea name="address" id="address" class="form-control" rows="2" cols="25" required="required"
                            placeholder="Enter Address"></textarea>
                    </div>
                </div>
            </div>
            <div class="row marginbot-20">
                <div class="col-md-2">
                    <label>Enter PIN Code *:</label>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <input type="text" class="form-control input-lg" placeholder="Enter Pincode" name="pincode" id="pincode" required="required" pattern="^[0-9 ]+$" title="Please enter 6 digit number only"/>

                    </div>
                </div>
                <div class="col-md-2">
                    <label>Enter Your City *:</label>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <input type="text" class="form-control input-lg" placeholder="Enter City" name="city" id="city" required="required" pattern="^[A-Za-z ]+$" title="Please enter character only"/>

                    </div>
                </div>

            </div>
            <div class="row marginbot-20">
                <div class="col-md-2">
                    <label>Select Your State *:</label>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <input type="text" class="form-control input-lg" placeholder="Enter State" name="state" id="state" required="required" pattern="^[A-Za-z ]+$" title="Please enter character only"/>

                    </div>
                </div>
                <div class="col-md-2">
                    <label>Enter Your Country *:</label>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <input type="text" class="form-control input-lg" placeholder="Enter Country" name="country" id="country" required="required" pattern="^[A-Za-z ]+$" title="Please enter character only"/>

                    </div>
                </div>

            </div>
            <div class="row marginbot-20">
                <div class="col-md-2">
                    <label>Enter Your Company *:</label>
                </div>

                <div class="col-md-10">
                    <div class="form-group">
                        <input type="text" class="form-control input-lg" placeholder="Enter Your Company Name" name="company" id="company" required="required" />

                    </div>
                </div>
            </div>
            
            <div class="row marginbot-20">
                <div class="col-md-2">
                    <label>Enter Description *:</label>
                </div>

                <div class="col-md-10">
                    <div class="form-group">
                        <textarea name="description" id="description" class="form-control" rows="4" cols="25" required="required"
                            placeholder="Write About You"></textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">



                    <input type="submit" class="btn btn-skin btn-lg btn-block" id="btnContactUs" value="Send" />

                </div>
            </div>
        </form>
        <br />
    </div>
</section>
