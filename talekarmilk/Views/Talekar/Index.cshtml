                    </div>
                    <a href='https://www.add-map.net/'>embedding google maps into website</a>
                    <script type='text/javascript' src='https://embedmaps.com/google-maps-authorization/script.js?id=bef317ce60a701a2f724fd5245cb65af8a3091c8'></script>
                    <script type='text/javascript'>function init_map() { var myOptions = { zoom: 15, center: new google.maps.LatLng(18.7826399, 74.29568749999999), mapTypeId: google.maps.MapTypeId.ROADMAP }; map = new google.maps.Map(document.getElementById('gmap_canvas'), myOptions); marker = new google.maps.Marker({ map: map, position: new google.maps.LatLng(18.7826399, 74.29568749999999) }); infowindow = new google.maps.InfoWindow({ content: '<strong>Indrayani Milk Marketing</strong><br>Near Dutta Mandir, Karegaon, Maharashtra<br>412220 Pune<br>' }); google.maps.event.addListener(marker, 'click', function () { infowindow.open(map, marker); }); infowindow.open(map, marker); } google.maps.event.addDomListener(window, 'load', init_map);</script>
