        <div class="container">

            <div class="row marginbot-80">
                <div class="col-md-4 col-md-offset-1">
                    <form id="contact-form" method="post" action="@Url.Action("Contact", "Talekar")">
                        <div class="row marginbot-20">
                            <div class="col-md-6 xs-marginbot-20">
                                <input type="text" class="form-control input-lg" id="fname" name="fname" placeholder="Enter first name" required="required" pattern="^[A-Za-z ]+$" title="Please enter character only"/>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control input-lg" id="lname" name="lname" placeholder="Enter last name" required="required" pattern="^[A-Za-z ]+$" title="Please enter character only"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">

                                <div class="form-group">
                                    <input type="email" class="form-control input-lg" name="email"  id="email" placeholder="Email ID" required="required" />
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control input-lg" name="subject" id="subject" placeholder="Subject" required="required" pattern="^[A-Za-z ]+$" title="Please enter character only"/>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control input-lg" name="mobile" id="mobile" placeholder="Mobile number" required="required" pattern="^[0-9]+$" title="Please enter 10 digit number only"/>
                                </div>

                                <div class="form-group">
                                    <textarea name="message" id="message" class="form-control" rows="4" cols="25" required="required"
                                        placeholder="Message"></textarea>
                                </div>
                                <input type="submit" class="btn btn-skin btn-lg btn-block" id="btnContactUs" value="Send" />

                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-4 col-md-offset-1" id="map">
                    <script src='https://maps.googleapis.com/maps/api/js?v=3.exp'></script>
                    <div class="map" style='overflow: hidden; border: 1px solid #3DC9B3'>
                        <div id='gmap_canvas' style='height: 429px; width: 575px;'></div>
                        <style>
